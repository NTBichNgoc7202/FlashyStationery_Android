<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">
        <LinearLayout
            android:id="@+id/ll_Deliveried"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/image_shadow_4">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/orderlisticon"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Đã giao hàng"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/image_shadow_3"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/so_caro"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:text="Kiện hàng đã giao hàng thành công. Ấn vào để xem chi tiết bạn nhé!"
                            android:textColor="#5D5C78"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="3 sản phẩm"
                                android:layout_marginTop="10dp"
                                android:textColor="#5D5C78"
                                android:textSize="10sp"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Thành tiền: 240.000đ"
                                android:layout_marginTop="10dp"
                                android:textColor="#5D5C78"
                                android:textSize="10sp"
                                android:gravity="end"
                                android:layout_marginLeft="20dp"/>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
                <Button
                    android:id="@+id/btn_DanhGia"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:background="@drawable/image_shadow"
                    android:layout_gravity="end"
                    android:text="Đánh giá"
                    android:textColor="#5D5C78"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_Delivering"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/image_shadow_4"
            android:layout_marginTop="15dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/orderlisticon"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Chờ lấy hàng"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/image_shadow_3"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/so_caro"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:text="Kiện hàng đang chờ bên đơn vị vận chuyển. Ấn vào để xem chi tiết bạn nhé!"
                            android:textColor="#5D5C78"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="3 sản phẩm"
                                android:layout_marginTop="10dp"
                                android:textColor="#5D5C78"
                                android:textSize="10sp"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Thành tiền: 240.000đ"
                                android:layout_marginTop="10dp"
                                android:textColor="#5D5C78"
                                android:textSize="10sp"
                                android:gravity="end"
                                android:layout_marginLeft="20dp"/>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
                <Button
                    android:id="@+id/btn_DaNhanDuocHang"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:background="@drawable/image_shadow"
                    android:layout_gravity="end"
                    android:text="ĐÃ NHẬN ĐƯỢC HÀNG"
                    android:textColor="#5D5C78"/>




            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_WaitForDelivery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/image_shadow_4"
            android:layout_marginTop="15dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/orderlisticon"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Chờ lấy hàng"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/image_shadow_3"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/so_caro"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:text="Kiện hàng đang chờ bên đơn vị vận chuyển. Ấn vào để xem chi tiết bạn nhé!"
                            android:textColor="#5D5C78"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="3 sản phẩm"
                                android:layout_marginTop="10dp"
                                android:textColor="#5D5C78"
                                android:textSize="10sp"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Thành tiền: 240.000đ"
                                android:layout_marginTop="10dp"
                                android:textColor="#5D5C78"
                                android:textSize="10sp"
                                android:gravity="end"
                                android:layout_marginLeft="20dp"/>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
                <Button
                    android:id="@+id/btn_XemChiTiet1"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:background="@drawable/image_shadow"
                    android:layout_gravity="end"
                    android:text="XEM CHI TIẾT"
                    android:textColor="#5D5C78"/>




            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_WaitForComfirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/image_shadow_4"
            android:layout_marginTop="15dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/orderlisticon"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Chờ xác nhận"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/image_shadow_3"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/so_caro"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:text="Kiện hàng đang chờ xác nhận và đóng gói. Ấn vào để xem chi tiết bạn nhé!"
                            android:textColor="#5D5C78"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="3 sản phẩm"
                                android:layout_marginTop="10dp"
                                android:textColor="#5D5C78"
                                android:textSize="10sp"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Thành tiền: 240.000đ"
                                android:layout_marginTop="10dp"
                                android:textColor="#5D5C78"
                                android:textSize="10sp"
                                android:gravity="end"
                                android:layout_marginLeft="20dp"/>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
                <Button
                    android:id="@+id/btn_XemChiTiet2"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:background="@drawable/image_shadow"
                    android:layout_gravity="end"
                    android:text="XEM CHI TIẾT"
                    android:textColor="#5D5C78"/>




            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</ScrollView>