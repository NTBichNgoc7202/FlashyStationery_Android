<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:layout_marginTop="10dp"
   >
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:orientation="vertical">
    <TextView
        android:id="@+id/txt_Login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ĐĂNG NHẬP"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#5D5C78"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        >
      <LinearLayout
          android:id="@+id/AccountNameLayout"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          >
        <TextView
            android:id="@+id/txt_InputLoginName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên đăng nhập"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#5D5C78"
            />
        <EditText
            android:id="@+id/edt_InputLoginName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="20sp"
            android:background="@drawable/custom_input"
            android:ems="10"
            android:inputType="text"
            android:layout_marginTop="5dp"
            android:drawableLeft="@drawable/ic_baseline_person_24"
            android:paddingLeft="10dp"
            />
      </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp">
        <TextView
            android:id="@+id/txt_InputPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nhập mật khẩu"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#5D5C78"
            />
      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@+id/txt_InputPassword"
          android:layout_marginTop="5dp"
         >
        <EditText
            android:layout_toStartOf="@+id/Passwordicon"
            android:id="@+id/edt_InputPassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="20sp"
            android:background="@drawable/custom_input"
            android:ems="10"
            android:inputType="textPassword"
            android:drawableLeft="@drawable/ic_baseline_lock_24"
            android:paddingLeft="10dp"
            />
        <ImageView
            android:id="@+id/imv_Passwordicon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/password_show"
            android:adjustViewBounds="true"
            android:layout_marginEnd="10dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>
      </RelativeLayout>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp">
          >
        <CheckBox
            android:id="@+id/edt_Remember"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            />
        <TextView
            android:layout_toRightOf="@+id/edt_Remember"
            android:id="@+id/txt_Remember"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ghi nhớ cho lần sau"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#5D5C78"
            />
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_centerVertical="true"
          android:layout_toRightOf="@id/txt_Remember"
          android:layout_marginLeft="10dp">
        <TextView
            android:id="@+id/txt_ForgotPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/txt_Remember"
            android:text="Quên mật khẩu?"
            android:textColor="#5D5C78"
            android:textSize="12sp"
            android:textStyle="bold"/>
      </LinearLayout>
    </RelativeLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_SignIn"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:text="ĐĂNG NHẬP"
        android:background="@drawable/round_button_1"
        android:textColor="#5D5C78"
        android:textStyle="bold"
        android:textSize="22sp"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp">
      <View
          android:layout_centerVertical="true"
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="#5D5C78"
          android:layout_toStartOf="@+id/txt_Or"
          android:layout_marginEnd="20dp"
          android:layout_marginStart="20dp"/>
      <TextView
          android:id="@+id/txt_Or"
          android:layout_marginVertical="10dp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Hoặc đăng nhập bằng"
          android:layout_centerInParent="true"
          android:textSize="12sp"
          android:textStyle="bold"
          android:textColor="#5D5C78"
          />
      <View
          android:layout_centerVertical="true"
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="#5D5C78"
          android:layout_toEndOf="@+id/txt_Or"
          android:layout_marginEnd="20dp"
          android:layout_marginStart="20dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        >
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:gravity="center"
          >
        <ImageButton
            android:id="@+id/img_Facebook"
            android:layout_marginHorizontal="10dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/facebook_logo"
            android:scaleType="centerInside"
            android:background="@drawable/backgroud_circle" />
        <ImageButton
            android:id="@+id/img_Google"
            android:layout_marginHorizontal="10dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/google_logo"
            android:scaleType="centerInside"
            android:background="@drawable/backgroud_circle"/>
      </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp">
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:gravity="center"
          >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:text="Chưa có tài khoản?"
            android:textColor="#5D5C78"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_marginRight="5dp"/>
        <TextView
            android:id="@+id/txt_RegisterNow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:text="@string/registernow"
            android:textColor="#5D5C78"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"/>
      </LinearLayout>
    </RelativeLayout>
  </LinearLayout>
</RelativeLayout>