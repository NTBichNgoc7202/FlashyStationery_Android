<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CustomerSupport">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_marginHorizontal="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tìm kiếm từ khóa"
            android:textSize="20sp"
            android:textColor="#5D5C78"
            android:gravity="center"/>
        <SearchView
            android:id="@+id/edtSearch"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/round_corner"
            android:drawableStart="@drawable/ic_baseline_search_24" />
        <TextView
            android:layout_marginHorizontal="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DANH MỤC"
            android:textSize="24sp"
            android:textColor="#5D5C78"
            android:textStyle="bold" />
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:stretchColumns="*">
            <TableRow>
                    <LinearLayout
                        android:id="@+id/ll_BuyingSupport"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:background="@drawable/image_shadow"
                            android:src="@drawable/cart"
                            android:padding="10dp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Mua sắm"
                            android:textColor="#D8BDC1"
                            android:textStyle="bold"
                            android:gravity="center_horizontal"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_AccountSupport"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:background="@drawable/image_shadow"
                            android:src="@drawable/user"
                            android:padding="10dp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Tài khoản"
                            android:textColor="#D8BDC1"
                            android:textStyle="bold"
                            android:gravity="center_horizontal"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_ExchangeSupport"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:background="@drawable/image_shadow"
                            android:src="@drawable/exchange"
                            android:padding="10dp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Đổi trả"
                            android:textStyle="bold"
                            android:textColor="#D8BDC1"
                            android:gravity="center_horizontal"/>
                    </LinearLayout>
                </TableRow>


            <TableRow android:layout_marginTop="20dp">
            <LinearLayout
                android:id="@+id/ll_PaymentSupport"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/image_shadow"
                    android:src="@drawable/payment"
                    android:padding="10dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Thanh toán"
                    android:textColor="#D8BDC1"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_DeliverySupport"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/image_shadow"
                    android:src="@drawable/delivery"
                    android:padding="10dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Vận chuyển"
                    android:textColor="#D8BDC1"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:id="@+id/imv_NewProduct"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/image_shadow"
                    android:src="@drawable/voucher_customer_supportt"
                    android:padding="10dp"/>
                <TextView
                    android:id="@+id/txt_NewProduct"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Khuyến mãi"
                    android:textStyle="bold"
                    android:textColor="#D8BDC1"
                    android:gravity="center_horizontal"/>
            </LinearLayout>
            </TableRow>
        </TableLayout>
        <TextView
            android:layout_marginHorizontal="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CÂU HỎI THƯỜNG GẶP"
            android:textSize="24sp"
            android:textColor="#5D5C78"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical">

            <ListView
                android:id="@+id/lv_Question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_marginHorizontal="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CHĂM SÓC KHÁCH HÀNG"
                android:textSize="24sp"
                android:textColor="#5D5C78"
                android:textStyle="bold"/>
            <LinearLayout
                android:id="@+id/ll_ChatSupport"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/message"/>
                <TextView
                    android:textSize="18sp"
                    android:layout_marginStart="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nhắn tin cho Flashy" />
            </LinearLayout>
            <View
                android:layout_marginHorizontal="10dp"
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="#c0c0c0"/>
            <LinearLayout
                android:id="@+id/ll_CallSupport"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/call"/>
                <TextView
                    android:textSize="18sp"
                    android:layout_marginStart="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Gọi cho Flashy" />
            </LinearLayout>
            <View
                android:layout_marginHorizontal="10dp"
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="#c0c0c0"/>
            <LinearLayout
                android:id="@+id/ll_EmailSupport"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/mail"/>
                <TextView
                    android:textSize="18sp"
                    android:layout_marginStart="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="E-mail cho Flashy" />
            </LinearLayout>
            <View
                android:layout_marginHorizontal="10dp"
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="#c0c0c0"/>-->

        </LinearLayout>
    </LinearLayout>

</ScrollView>