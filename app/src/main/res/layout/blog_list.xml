<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imvlogo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    app:srcCompat="@drawable/ic_flashy_logo" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/writer_blog"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Flashy Stationery"
                        android:textColor="#000000"
                        android:textSize="22dp" />

                    <TextView
                        android:id="@+id/time_blog"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1 giờ trước" />

                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/imvposter_blog"
                android:layout_width="match_parent"
                android:layout_height="414dp"
                android:layout_marginTop="15dp"
                app:srcCompat="@drawable/blog_flashsale" />

            <Button
                android:id="@+id/btnshopping_blog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#424078"
                android:drawableRight="@android:drawable/ic_media_play"
                android:gravity=""
                android:padding="10dp"
                android:text="Săn sale thuiii"
                android:textColor="@color/white"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/txttitle_blog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:text="ƯU ĐÃI CỰC LỚN - GIÁ CỰC HỜI VÀO 10-12H NGÀY 01/12/2022 CÁC BẠN ƠI!!!"
                android:textColor="#000000"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/txtcontent_blog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Flash sale duy nhất chỉ trong 2 giờ với những ưu đãi có hạn vì vậy hãy nhanh tay bỏ vào giỏ hàng những món đồ mình yêu thích ngay thôi nào!"
                android:textColor="#000000" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp">

                <CheckBox
                    android:id="@+id/btn_likepost"
                    android:layout_width="48dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/ic_like"
                    android:button="@null"
                    android:checked="false"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="300dp"
                    app:srcCompat="?android:attr/actionModeShareDrawable" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>