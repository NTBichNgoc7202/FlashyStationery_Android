<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderTrackingActivity"
    android:orientation="vertical"
    android:background="@color/cultured">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tl_OrderCancelRefund"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabSelectedTextColor="@color/black_coral"
        app:tabTextColor="@color/pale_silver"
        app:tabIndicatorColor="@color/black_coral"
        android:background="@drawable/tab_layout_shadow"/>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vp_OrderCancelRefund"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>