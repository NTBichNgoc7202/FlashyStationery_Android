<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/shadow_for_header">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cart_header_title"
            android:textSize="22sp"
            android:textStyle="bold"
            android:padding="10dp"
            android:textColor="#5d5c78"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:id="@+id/txt_LocationCart"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/long_round_textbox"
            android:gravity="center"
            android:breakStrategy="balanced"
            android:layout_marginHorizontal="10dp"
            android:maxLength="22"
            android:drawableLeft="@drawable/location_icon"
            android:text="Phường Linh Trung, Quận Thủ Đức"
            android:textAllCaps="false"
            android:textSize="15sp"
            android:paddingStart="5dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/shadow_for_header">
        <TextView
            android:id="@+id/txt_CartFull"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tất cả"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#5d5c78"
            android:background="@drawable/header_activate"/>
        <TextView
            android:id="@+id/txt_CartRebuy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Mua lại"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#66000000"
            android:background="@drawable/header_disable"/>
    </LinearLayout>

</LinearLayout>