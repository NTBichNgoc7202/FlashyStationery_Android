<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:text="VUI LÒNG ĐĂNG NHẬP/ĐĂNG KÝ ĐỂ TƯƠNG TÁC"
        android:gravity="center"
        android:textStyle="bold"
        android:padding="5dp"
        android:textColor="#000000"
        android:drawableRight="@android:drawable/ic_delete"
        android:background="@drawable/shadow_for_header"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_button_1"
            android:text="ĐĂNG KÝ"
            android:textColor="@color/ic_launcher_background"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_margin="20dp"
            android:layout_weight="1"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_button_3"
            android:text="ĐĂNG NHẬP"
            android:textColor="@color/pale_silver"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_margin="20dp"
            android:layout_weight="1"/>
    </LinearLayout>

</LinearLayout>