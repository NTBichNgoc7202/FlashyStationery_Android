<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SettingLanguage">

    <Button
        android:id="@+id/btn_setting_languageV"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/image_shadow_2"
        android:drawableRight="@drawable/ic_check_box_checked"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:text="TIẾNG VIỆT"
        android:textSize="18dp" />

    <Button
        android:id="@+id/btn_setting_languageE"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/image_shadow_2"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:text="TIẾNG ANH"
        android:textSize="18dp" />

</LinearLayout>