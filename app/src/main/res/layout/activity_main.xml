<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="#F7F8F4">
        
        <FrameLayout
            android:id="@+id/frameContainer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/bottomnavigationView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomnavigationView"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:menu="@menu/bottom_nav_menu"
            app:itemIconTint="#5D5C78"
            android:background="@drawable/image_shadow_2"
            app:itemTextColor="#5D5C78"
            app:labelVisibilityMode="labeled"
            app:itemBackground="@drawable/nav_icon_bg_color"
            app:itemTextAppearanceInactive="@style/BottomNavigationView"
            app:itemTextAppearanceActive="@style/BottomNavigationView.Active"
            app:itemPaddingTop="7dp"
            app:itemPaddingBottom="7dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>

            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:gravity="bottom">
                        <SearchView
                            android:id="@+id/search_home"
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/round_border_finding"
                            android:queryHint="Bạn muốn tìm gì"/>

                        <ImageView
                            android:id="@+id/imv_notification"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/notification_icon"
                            android:layout_gravity="end"/>
                </LinearLayout>

                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                                <ImageView
                                    android:id="@+id/imv_banner1"
                                    android:layout_width="978px"
                                    android:layout_height="250px"
                                    android:src="@drawable/banner1" />

                                <ImageView
                                    android:id="@+id/imv_banner2"
                                    android:layout_width="978px"
                                    android:layout_height="250px"
                                    android:layout_marginLeft="5dp"
                                    android:src="@drawable/banner2" />

                                <ImageView
                                    android:id="@+id/imv_banner3"
                                    android:layout_width="978px"
                                    android:layout_height="250px"
                                    android:layout_marginLeft="5dp"
                                    android:src="@drawable/banner3" />
                        </LinearLayout>
                </HorizontalScrollView>
                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">
                        <TableRow>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:gravity="center">
                                        <ImageView
                                            android:id="@+id/imv_FlashSale"
                                            android:layout_width="50dp"
                                            android:layout_height="50dp"
                                            android:background="@drawable/image_shadow"
                                            android:src="@drawable/flashsale"
                                            android:padding="5dp"/>
                                        <TextView
                                            android:id="@+id/txt_FlashSale"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="Flash Sale"
                                            android:textColor="#D8BDC1"
                                            android:gravity="center_horizontal"/>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:gravity="center">
                                        <ImageView
                                            android:id="@+id/imv_TopSale"
                                            android:layout_width="50dp"
                                            android:layout_height="50dp"
                                            android:background="@drawable/image_shadow"
                                            android:src="@drawable/topsale"
                                            android:padding="5dp"/>
                                        <TextView
                                            android:id="@+id/txt_TopSale"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="Top Sale"
                                            android:textColor="#D8BDC1"
                                            android:gravity="center_horizontal"/>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:gravity="center">
                                        <ImageView
                                            android:id="@+id/imv_NewProduct"
                                            android:layout_width="50dp"
                                            android:layout_height="50dp"
                                            android:background="@drawable/image_shadow"
                                            android:src="@drawable/newproduct"
                                            android:padding="5dp"/>
                                        <TextView
                                            android:id="@+id/txt_NewProduct"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="Sản phẩm mới"
                                            android:textColor="#D8BDC1"
                                            android:gravity="center_horizontal"/>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:gravity="center">
                                        <ImageView
                                            android:id="@+id/imv_WarehouseDiscount"
                                            android:layout_width="50dp"
                                            android:layout_height="50dp"
                                            android:background="@drawable/image_shadow"
                                            android:src="@drawable/warehousediscount"
                                            android:padding="5dp"/>
                                        <TextView
                                            android:id="@+id/txt_WarehouseDiscount"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="Tồn kho"
                                            android:textColor="#D8BDC1"
                                            android:gravity="center_horizontal"/>
                                </LinearLayout>
                        </TableRow>
                        <TableRow>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="DANH MỤC SẢN PHẨM"
                                    android:textSize="25sp"
                                    android:layout_weight="1"
                                    android:gravity="start"
                                    android:textColor="#5D5C78"
                                    android:textStyle="bold"
                                    android:layout_marginTop="10dp"
                                    android:layout_span="4"
                                    android:layout_marginLeft="23dp"/>
                        </TableRow>
                        <TableRow
                            android:layout_marginTop="5dp">
                                <LinearLayout
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:gravity="center">
                                        <ImageView
                                            android:id="@+id/imv_NoteBook"
                                            android:layout_width="50dp"
                                            android:layout_height="50dp"
                                            android:background="@drawable/image_shadow"
                                            android:src="@drawable/notebookitem"
                                            android:padding="5dp"/>
                                        <TextView
                                            android:id="@+id/txt_NoteBook"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="Sổ"
                                            android:textColor="#D8BDC1"
                                            android:gravity="center_horizontal"/>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:gravity="center">
                                        <ImageView
                                            android:id="@+id/imv_Book"
                                            android:layout_width="50dp"
                                            android:layout_height="50dp"
                                            android:background="@drawable/image_shadow"
                                            android:src="@drawable/bookitem"
                                            android:padding="5dp"/>
                                        <TextView
                                            android:id="@+id/txt_Book"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="Vở"
                                            android:textColor="#D8BDC1"
                                            android:gravity="center_horizontal"/>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                        <ImageView
                                            android:id="@+id/imv_LearningTool"
                                            android:layout_width="50dp"
                                            android:layout_height="50dp"
                                            android:background="@drawable/image_shadow"
                                            android:padding="5dp"
                                            android:src="@drawable/pencil" />

                                        <TextView
                                            android:id="@+id/txt_LearningTool"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:gravity="center_horizontal"
                                            android:text="Dụng cụ\nhọc tập"
                                            android:textColor="#D8BDC1" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:gravity="center">
                                        <ImageView
                                            android:id="@+id/imv_Files"
                                            android:layout_width="50dp"
                                            android:layout_height="50dp"
                                            android:background="@drawable/image_shadow"
                                            android:src="@drawable/filesitem"
                                            android:padding="5dp"/>
                                        <TextView
                                            android:id="@+id/txt_Files"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="Files"
                                            android:textColor="#D8BDC1"
                                            android:gravity="center_horizontal"/>
                                </LinearLayout>
                        </TableRow>
                        <TableRow
                            android:layout_marginTop="5dp">
                                <LinearLayout
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:gravity="center">
                                        <ImageView
                                            android:id="@+id/imv_PencilCase"
                                            android:layout_width="50dp"
                                            android:layout_height="50dp"
                                            android:background="@drawable/image_shadow"
                                            android:src="@drawable/pencilcaseitem"
                                            android:padding="5dp"/>
                                        <TextView
                                            android:id="@+id/txt_PencilCase"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="Hộp bút"
                                            android:textColor="#D8BDC1"
                                            android:gravity="center_horizontal"/>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:gravity="center">
                                        <ImageView
                                            android:id="@+id/imv_LabelBook"
                                            android:layout_width="50dp"
                                            android:layout_height="50dp"
                                            android:background="@drawable/image_shadow"
                                            android:src="@drawable/labelitem"
                                            android:padding="5dp"/>
                                        <TextView
                                            android:id="@+id/txt_LabelBook"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="Nhãn vở"
                                            android:textColor="#D8BDC1"
                                            android:gravity="center_horizontal"/>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:gravity="center">
                                        <ImageView
                                            android:id="@+id/imv_WrappingPaper"
                                            android:layout_width="50dp"
                                            android:layout_height="50dp"
                                            android:background="@drawable/image_shadow"
                                            android:src="@drawable/wrappingpaperitem"
                                            android:padding="5dp"/>
                                        <TextView
                                            android:id="@+id/txt_WrappingPaper"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="Giấy bao\ncác loại"
                                            android:textColor="#D8BDC1"
                                            android:gravity="center_horizontal"/>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:gravity="center">
                                        <ImageView
                                            android:id="@+id/imv_DecorativeThing"
                                            android:layout_width="50dp"
                                            android:layout_height="50dp"
                                            android:background="@drawable/image_shadow"
                                            android:src="@drawable/othersitem"
                                            android:padding="5dp"/>
                                        <TextView
                                            android:id="@+id/txt_DecrativeThing"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="Đồ trang trí"
                                            android:textColor="#D8BDC1"
                                            android:gravity="center_horizontal"/>
                                </LinearLayout>
                        </TableRow>
                        <TableRow>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="SẢN PHẨM BÁN CHẠY"
                                    android:textSize="25sp"
                                    android:layout_weight="1"
                                    android:gravity="start"
                                    android:textColor="#5D5C78"
                                    android:textStyle="bold"
                                    android:layout_marginTop="10dp"
                                    android:layout_span="4"
                                    android:layout_marginLeft="23dp"/>
                        </TableRow>
                        <TableRow>
                                <GridView
                                    android:id="@+id/gv_HotProduct"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:numColumns="4"
                                    android:layout_span="4"
                                    android:layout_weight="1"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginLeft="10dp"/>
                        </TableRow>
                        <TableRow>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="GỢI Ý SẢN PHẨM"
                                    android:textSize="25sp"
                                    android:layout_weight="1"
                                    android:gravity="start"
                                    android:textColor="#5D5C78"
                                    android:textStyle="bold"
                                    android:layout_marginTop="10dp"
                                    android:layout_span="4"
                                    android:layout_marginLeft="23dp"/>
                        </TableRow>
                        <TableRow>
                                <GridView
                                    android:id="@+id/gv_SuggestProduct"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_span="4"
                                    android:layout_weight="1"
                                    android:numColumns="2"
                                    android:layout_marginTop="5dp"
                                    android:gravity="center"
                                    android:layout_marginLeft="10dp"/>
                        </TableRow>
                </TableLayout>
        </LinearLayout>
</ScrollView>
