<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cultured"
    android:orientation="vertical"
    tools:context=".SettingActivity">
    <Button
        android:id="@+id/btn_setting_language"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/image_shadow_2"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:textSize="18dp"
        android:drawableRight="@drawable/ic_baseline_keyboard_arrow_right_24"
        android:text="Cài đặt ngôn ngữ"/>
    <Button
        android:id="@+id/btn_setting_notify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/image_shadow_2"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:textSize="18dp"
        android:drawableRight="@drawable/ic_baseline_keyboard_arrow_right_24"
        android:text="Cài đặt thông báo"/>
    <Button
        android:id="@+id/btn_setting_privite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/image_shadow_2"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:textSize="18dp"
        android:drawableRight="@drawable/ic_baseline_keyboard_arrow_right_24"
        android:text="Cài đặt quyền riêng tư"/>



</LinearLayout>