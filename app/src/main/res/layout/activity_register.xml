<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:orientation="vertical"
    android:padding="30dp"
    android:background="#F7F8F4"
    >
    <TextView
        android:id="@+id/txt_Register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TẠO TÀI KHOẢN"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#5D5C78"
        />
    <TextView
        android:id="@+id/txt_Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tên"
        android:layout_gravity="center"
        android:gravity="left"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#5D5C78"
        android:layout_marginTop="30dp"
        />
    <EditText
        android:id="@+id/edt_Name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="22sp"
        android:background="@drawable/custom_input"
        android:ems="10"
        android:inputType="text"
        android:layout_marginTop="5dp"/>
    <TextView
        android:id="@+id/txt_PhoneNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Số điện thoại"
        android:layout_gravity="center"
        android:gravity="left"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#5D5C78"
        android:layout_marginTop="20dp"
        />
    <EditText
        android:id="@+id/edt_PhoneNumber"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="22sp"
        android:background="@drawable/custom_input"
        android:drawableLeft="@drawable/ic_baseline_phone_24"
        android:ems="10"
        android:inputType="number"
        android:layout_marginTop="5dp"/>
    <TextView
        android:id="@+id/txt_Password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mật khẩu"
        android:layout_gravity="center"
        android:gravity="left"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#5D5C78"
        android:layout_marginTop="20dp"
        />
    <EditText
        android:id="@+id/edt_Password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="22sp"
        android:background="@drawable/custom_input"
        android:drawableLeft="@drawable/ic_baseline_lock_24"
        android:ems="10"
        android:inputType="text"
        android:layout_marginTop="5dp"/>
    <TextView
        android:id="@+id/txt_ReenterPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nhập lại mật khẩu"
        android:layout_gravity="center"
        android:gravity="left"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#5D5C78"
        android:layout_marginTop="20dp"
        />
    <EditText
        android:id="@+id/edt_ReenterPassword"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="20sp"
        android:background="@drawable/custom_input"
        android:drawableLeft="@drawable/ic_baseline_lock_24"
        android:ems="10"
        android:inputType="text"
        android:layout_marginTop="5dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <CheckBox
            android:id="@+id/edt_Note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vui lòng lưu ý rằng bằng cách tạo và/hoặc sử dụng tài
khoản người dùng, bạn đồng ý với Điều Khoản Dịch Vụ
và Chính Sách Bảo Mật của chúng tôi."
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            android:textColor="#5D5C78"
            />
    </LinearLayout>
    <Button
        android:id="@+id/btn_Register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_button_1"
        android:layout_marginTop="30dp"
        android:textColor="#5D5C78"
        android:textStyle="bold"
        android:textSize="22sp"
        android:text="ĐĂNG KÝ"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hoặc đăng ký bằng"
        android:textSize="12sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="#5D5C78"
        android:layout_marginTop="5dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="15dp">
        <ImageButton
            android:id="@+id/img_Facebook"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/facebook_logo"
            android:scaleType="centerInside"
            android:background="@drawable/backgroud_circle"
            android:layout_marginRight="10dp"/>
        <ImageButton
            android:id="@+id/img_Google"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/google_logo"
            android:scaleType="centerInside"
            android:background="@drawable/backgroud_circle"
            android:layout_marginLeft="10dp"/>
        />

    </LinearLayout>



</LinearLayout>